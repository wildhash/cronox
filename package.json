{
  "name": "cronos-parallelpay",
  "version": "2.0.0",
  "description": "Agentic, gasless x402 micropayments + streaming payouts with SLA-backed refunds on Cronos.",
  "main": "index.js",
  "scripts": {
    "compile": "node scripts/compile.js",
    "verify": "npx tsx scripts/verify-contracts.ts",
    "deploy": "npx tsx scripts/deploy.ts --network=cronos-testnet",
    "deploy:cronos-testnet": "npx tsx scripts/deploy.ts --network=cronos-testnet",
    "deploy:cronos": "npx tsx scripts/deploy.ts --network=cronos",
    "deploy:monad-testnet": "npx tsx scripts/deploy.ts --network=monad-testnet",
    "seller-api": "npx tsx apps/seller-api/index.ts",
    "buyer-agent": "npx tsx apps/buyer-agent/index.ts",
    "dashboard": "npx tsx dashboard/server.ts",
    "demo": "node scripts/demo.js",
    "demo:dry": "node scripts/demo-dry.js",
    "demo:sla": "node scripts/demo-sla.js",
    "demo:watch": "concurrently --kill-others \"npm run seller-api\" \"npm run dashboard\"",
    "demo:pay": "npx wait-on http://localhost:3001/api/health && npm run buyer-agent",
    "stress-test": "npx tsx scripts/stress-test.ts",
    "stress-parallel": "npx tsx scripts/stress-parallel.ts",
    "simulate-degradation": "npx tsx scripts/simulate-degradation.ts",
    "test-local": "npx tsx scripts/test-local.ts",
    "test-smoke": "npx mocha test/integration/smoke.test.ts --require tsx/cjs",
    "test-hardhat": "npx hardhat test --no-compile || echo 'Hardhat tests skipped (requires pre-compiled contracts)'",
    "test": "npm run test-smoke && npm run compile",
    "start": "npm run dashboard"
  },
  "keywords": [
    "cronos",
    "x402",
    "payments",
    "streaming",
    "sla",
    "eip-3009",
    "gasless",
    "agent",
    "ai",
    "crypto"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.14",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.19",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.10",
    "chai": "^4.5.0",
    "concurrently": "^9.2.1",
    "ethers": "^6.16.0",
    "hardhat": "^2.22.18",
    "mocha": "^11.7.5",
    "solc": "^0.8.24",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/wildhash/cronos.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
